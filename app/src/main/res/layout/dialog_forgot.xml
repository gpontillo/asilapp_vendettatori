<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".PasswordRecoveryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogBox"
        app:layout_constraintTop_toTop0f="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgoTitle"
            android:padding="10dp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toTop0f="parent" />


        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_MarginEnd="20dp"
            android:layout_marginTop="8dp"
            android:text="Enter your email address"
            android:textSize="16sp"
            android:textcolor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/forgoTitle"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editbox"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginstart="20sp"
            android:layout_marginBottom="30dp"
            android:maxlines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgoTitle"
            tools:ignore="Autofill,LabelFor,TextFields" />


        <Button
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:id="@+id/Btncancel"
         android:layout_marginStart="40dp"
         android:layout_marginEnd="10dp"
         android:textcolor="@color/white"
         android:textSize="14sp"
         android:text="Cancel"
         android:layout_marginbutton="8dp"
         app:cornerRadius="20dp"
         android:layout_marginTop="10dp"
         app:layout_constraintTop_toBottomOf="@id/editbox"
         app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_MarginEnd="40dp"
            android:layout_marginStart="48dp"
            android:text="Reset"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@id/Btncancel"
            tools:layout_editor_absoluteY="126dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>