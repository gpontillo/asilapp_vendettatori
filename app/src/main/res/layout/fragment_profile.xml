<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_pages.ProfileFragment">
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profileImage"
        android:layout_marginTop="35dp"
        android:src="@drawable/account_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileText"
        android:text="@string/scritta_profilo"
        android:layout_marginTop="5dp"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailLayoutProfile"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/profileText"
        app:layout_constraintStart_toStartOf="@id/profileText"
        app:layout_constraintTop_toBottomOf="@id/profileText"
        app:startIconDrawable="@drawable/email_24"
        app:placeholderText="Email"
        android:hint="@string/email_hint"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneLayoutProfile"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="@id/emailLayoutProfile"
        app:layout_constraintStart_toStartOf="@id/emailLayoutProfile"
        app:layout_constraintTop_toBottomOf="@id/emailLayoutProfile"
        app:placeholderText="Telefono"
        app:startIconDrawable="@drawable/baseline_phone_24"
        android:hint="@string/numero_hint"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="195dp"
        android:text="@string/cambio_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneLayoutProfile" />


</androidx.constraintlayout.widget.ConstraintLayout>