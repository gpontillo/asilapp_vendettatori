<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.vendettatori.asilapp.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_datiPersonaliFragment"
            app:destination="@id/datiPersonaliFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_profileFragment_to_documentiFragment"
            app:destination="@id/documentiFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/datiPersonaliFragment"
        android:name="com.vendettatori.asilapp.profile.DatiPersonaliFragment"
        android:label="fragment_dati_personali"
        tools:layout="@layout/fragment_dati_personali" />
    <fragment
        android:id="@+id/documentiFragment"
        android:name="com.vendettatori.asilapp.profile.DocumentiFragment"
        android:label="fragment_documenti"
        tools:layout="@layout/fragment_documenti" />
</navigation>